
<html>
  <head>

  </head>
  


<%= flash[:notice] %>
<h1><%= current_user.name %></h1>
<body>
<%= form_with model: current_user do |f| %>
<% alert %>
  <h4>name</h4>
  <%= f.text_field :name %>
  <h4>introduction</h4>
  <%= f.text_field :introduction %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <%= f.submit '変更' %>
<% end %>

<div class = 'main' >
  <div class='main-content'>
  <% @users.each do |user| %>
  <div class='main-content'>
    <div class = 'contents' >
    <p><%= image_tag user.get_image %></p>
    <p>name: <%= user.name %></p>
    <p>introduction: <%=user.introduction  %></p>
    </div>
  </div>
</body>
<% end %>

</div>
</html>